<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.MainPage">
    <ContentPage.Content>
        <Grid>
            <Label HorizontalOptions="Center" FontSize="Title">My Collection of movies</Label>
            <StackLayout Spacing="5" VerticalOptions="Center">

                <Button Clicked="BtnLabrary_Clicked"
                        HorizontalOptions="Center"
                        Padding="80,20"
                        Text="Go!">
                </Button>
                <Button Clicked="BtnSetting_Clicked" 
                    HorizontalOptions="Center"
                        Padding="80,20"
                        Text="Settings"></Button>
                <Image Source="launcher_foreground.png" Aspect="AspectFit" HeightRequest="250" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
